root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
indent_size = 4

[*.sh]
indent_size = 4

[postinstall]
indent_size = 4

[preinstall]
indent_size = 4

[*.applescript]
indent_size = 4

[*.json]
indent_size = 4

[*.jsonc]
indent_size = 4
